{
    "name": "mediashare/marathon",
    "description": "Marathon is a free and open-source command-line time tracker. It allows you to track the time you spend on tasks or projects.",
    "type": "library",
    "keywords": [
        "marathon",
        "time tracking",
        "time management",
        "productivity",
        "command line",
        "taks",
        "projects",
        "version control",
        "commit history",
        "time management",
        "workflow",
        "developer tools"
    ],
    "homepage": "https://github.com/Mediashare/marathon",
    "authors": [
        {
            "name": "Thibault Marquand",
            "email": "thibault@marquand.pro"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ramsey/collection": "^2.0",
        "symfony/cache": "^6.4",
        "symfony/console": "^6.4",
        "symfony/dotenv": "^6.4",
        "symfony/flex": "*",
        "symfony/framework-bundle": "^6.4",
        "symfony/process": "^6.4",
        "symfony/property-access": "^6.4",
        "symfony/runtime": "^6.4",
        "symfony/serializer": "^6.4",
        "symfony/yaml": "^6.4"
    },
    "bin": ["marathon"],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-dir": "../../bin",
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "Mediashare\\Marathon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mediashare\\Marathon\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "Mediashare\\Marathon\\Composer\\Installer::install"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "Mediashare\\Marathon\\Composer\\Installer::install"
        ],
        "console-package": "php bin/marathon"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^6.4",
            "console": "bin/console"
        },
        "marathon": {
            "console": "bin/marathon"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^6.4",
        "symfony/css-selector": "^6.4",
        "symfony/phpunit-bridge": "^7.0"
    }
}
